    List<WebForm.SanPhamService.SanPham> sam = new WebForm.SanPhamService.SanPhamService1Client().SpSam().Take(4).ToList();
    List<WebForm.SanPhamService.SanPham> hp = new WebForm.SanPhamService.SanPhamService1Client().SpHP().Take(4).ToList();
    List<WebForm.SanPhamService.SanPham> dell = new WebForm.SanPhamService.SanPhamService1Client().SpDell().Take(4).ToList();
