@{
    ViewBag.Title = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/Admin.cshtml";
    WebForm.CTDHService.CtDonDHServiceClient ct = new WebForm.CTDHService.CtDonDHServiceClient();
}
<script lang="javascript">
    function Status(x) {
        if (x == 1) return "Chưa xác nhận";
        if (x == 2) return "Xác nhận";
        if (x == 3) return "Đã giao hàng";
        return "Hủy";
    }
</script>
@model IEnumerable<WebForm.DonHangService.DonDH>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã DH</th>
                                <th>Họ Tên KH</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th>Ngày đặt</th>
                                <td>Ngày giao</td>
                                <th>Trạng thái</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ord in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@ord.MaDonDH</td>
                                    <td>@ord.HoTenKH</td>
                                    <td>@ct.Searid(int.Parse(ord.MaDonDH)).SoLuongDat)</td>
                                    <td>@ord.TongTien</td>
                                    <td>@ord.NgayDat</td>
                                    <td>@ord.NgayGiao</td>
                                    <td>@ord.TinhTrang</td>
                                    <td class="center">
                                        @Html.ActionLink(" ", "Detail", new { id = @ord.MaDonDH }, new { @class = "btn btn-primary icon-weibo icon-white" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
